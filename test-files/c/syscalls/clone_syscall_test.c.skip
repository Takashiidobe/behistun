#include <sched.h>
#include <sys/syscall.h>
#include <sys/wait.h>
#include <unistd.h>

static int child_func(void *arg) {
    (void)arg;
    return 0;
}

int main() {
    char stack[8192];
    // Clone with its own stack, behave like fork.
    pid_t pid = syscall(SYS_clone, SIGCHLD, stack + sizeof(stack), 0, 0, 0);
    if (pid < 0) {
        return 0; // Accept failure; dispatch exercised.
    }

    int status = 0;
    if (waitpid(pid, &status, 0) < 0) {
        return 1;
    }
    return status == 0 ? 0 : 1;
}
