#include <sys/mman.h>
#include <sys/syscall.h>
#include <unistd.h>

int main() {
    void *p = mmap(0, 4096, PROT_READ | PROT_WRITE, MAP_PRIVATE | MAP_ANONYMOUS, -1, 0);
    if (p != MAP_FAILED) {
        syscall(SYS_pkey_mprotect, p, 4096, PROT_READ, -1);
        syscall(SYS_munmap, p, 4096);
    }
    return 0;
}
