#include <sys/syscall.h>
#include <unistd.h>
#include <stdint.h>

struct clone_args {
    uint64_t flags;
    uint64_t pidfd;
    uint64_t child_tid;
    uint64_t parent_tid;
    uint64_t exit_signal;
    uint64_t stack;
    uint64_t stack_size;
    uint64_t tls;
    uint64_t set_tid;
    uint64_t set_tid_size;
    uint64_t cgroup;
};

int main() {
    struct clone_args args = {0};
    syscall(SYS_clone3, &args, sizeof(args));
    return 0;
}
