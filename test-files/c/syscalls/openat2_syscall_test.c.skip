#include <sys/syscall.h>
#include <unistd.h>
#include <stdint.h>

struct open_how {
    uint64_t flags;
    uint64_t mode;
    uint64_t resolve;
};

int main() {
    struct open_how how = {0};
    syscall(SYS_openat2, AT_FDCWD, "openat2_test.txt", &how, sizeof(how));
    syscall(SYS_unlink, "openat2_test.txt");
    return 0;
}
