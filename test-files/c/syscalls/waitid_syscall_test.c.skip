#include <sys/syscall.h>
#include <sys/wait.h>
#include <unistd.h>

int main() {
    pid_t pid = syscall(SYS_fork);
    if (pid < 0) {
        return 1;
    }
    if (pid == 0) {
        syscall(SYS_exit, 0);
        return 1;
    }

    siginfo_t info;
    long res = syscall(SYS_waitid, P_PID, pid, &info, WEXITED, 0);
    return res == 0 ? 0 : 1;
}
