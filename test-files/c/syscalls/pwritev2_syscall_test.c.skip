#include <sys/syscall.h>
#include <sys/uio.h>
#include <unistd.h>

int main() {
    int fd = syscall(SYS_memfd_create, "pwritev2_test", 0);
    if (fd >= 0) {
        const char a[] = "hi";
        struct iovec iov = {(void *)a, 2};
        syscall(SYS_pwritev2, fd, &iov, 1, 0, 0);
        syscall(SYS_close, fd);
    }
    return 0;
}
